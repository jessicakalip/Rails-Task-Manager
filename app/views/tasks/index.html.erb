<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <%= link_to task_path(task) do%>
  <h3><%=task.title %></h3>
  <% end %>
-
  <%= link_to task_path(task), method: :delete, data: {confirm: "Are you sure you want to delete task?"} do %>
    <i class="fas fa-trash"></i>
  <% end %>
<%end %>

<%= link_to "Add a New Task", new_task_path %>